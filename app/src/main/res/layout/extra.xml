            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/ushbu"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_back_white_stroce2_10"
            android:foreground="@drawable/clic"
            android:text="Optrion 1 ;wmf[wkm ;kmg[g ]plg5]4h,4 ok4h lhk,l];l     [lh][l][hl.], ,]l. [p,h4"
