<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1F6BB8"
    android:orientation="vertical"
    tools:context=".Activities.QuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#1f6BB8">

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/exitt"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/topicname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Selected topic name"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/time"
                    app:tint="#FAA72F" />

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:onClick="startTime"
                    android:textColor="#FAA72F" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/questions"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:background="@drawable/round_back_10"
            android:elevation="1dp"
            android:layout_alignTop="@id/questionwil"
            android:gravity="center"
            android:text="  1/10"
            android:textColor="#1F6BB8" />

        <TextView
            android:id="@+id/questionwil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_back_light_yellow10"
            android:gravity="center"
            android:minHeight="100dp"
            android:fontFamily="@font/ushbu"
            android:padding="20dp"
            android:text="Savollar shu joyda papdo bo'ladi ......"
            android:textColor="#CC000000"
            android:textSize="16dp" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="15dp"
            android:id="@+id/option1"
            android:fontFamily="@font/ushbu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/round_back_white_stroce2_10"
            android:foreground="@drawable/clic"
            tools:text="Optrion 1 ;wmf[wkm ;kmg[g ]plg5]4h,4 ok4h lhk,l];l     [lh][l][hl.], ,]l. [p,h4"
            android:textColor="#1F6BB8" />

